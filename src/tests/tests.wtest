	test "aplicarleUn15%DeDescuentoAGoodAirs"{
		assert.equals(1275,goodAirs.getPrecio())
	}
	
	test "verificarQueTengaCerticadoDeDescuentoGoodAirs"{
		assert.that(goodAirs.tieneElemento("Certificado de descuento"))
	}
}

